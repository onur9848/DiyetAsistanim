<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Kalori" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#084BB5</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@android:color/darker_gray</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">#B5333131</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#B5333131</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="profilEdittext">
        <item name="android:textColor">#8F2403</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/my_custom_textview</item>
        <item name="android:importantForAutofill">no</item>
        <item name="android:radius">3dp</item>
    </style>
    <style name="CustomButon">

       <item name="android:padding">10dp</item>
        <item name="android:textColor">#FBC02D</item>
        <item name="android:backgroundTint">#00796B</item>
        <item name="android:color">#00796B</item>
        <item name="android:layout_marginHorizontal">10dp</item>

    </style>
    <style name="macroLinear">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingVertical">5dp</item>
        <item name="android:paddingHorizontal">5dp</item>
    </style>
    <style name="diaologThema">
        <item name="android:padding">20dp</item>
        <item name="android:background">@drawable/my_lineearlayout</item>
    </style>

    <style name="mainTextView">
        <item name="android:text">@string/app_name</item>
        <item name="android:background">#484848</item>
        <item name="android:paddingHorizontal">3dp</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="adviceText">
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/advice_text</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="radius">
        <item name="android:background">@drawable/only_radius</item>

    </style>

</resources>