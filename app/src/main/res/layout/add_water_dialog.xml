<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">


        <LinearLayout
            style="@style/diaologThema"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

                <EditText
            android:id="@+id/suEkleText"
            style="@style/profilEdittext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/_1_bardak_su_200ml"
            android:inputType="textNoSuggestions|numberSigned" />

        <Button
            android:id="@+id/suEkleButton"
            style="@style/CustomButon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ekle" />
        </LinearLayout>

</LinearLayout>